@model IEnumerable<globalPoetryRozygrysh.Models.LyricsDto>

<div class="jumbotron" style="background: darkmagenta; border: solid 2px cyan;">
    <h1 style="color: cyan; margin-top: 0px!important;">GLOBAL POETRY РОЗЫГРЫШ</h1>
    <p class="lead" style="color: cyan;">Это твои слова?..</p>

    @if (ViewBag.TooltipText != null)
    {
        <p style="color: #00ff00; font-weight: 900;">@ViewBag.TooltipText</p>
    }

    <form class="" method="post" action="/Poetry/Process">
        <div class="row" style="margin-bottom: 25px;">
            @for (int i = 0; i < 5; i++)
            {
                <div class="col-md-6">
                    <label style="color: cyan;" for="lyrics[@i]" class="cols-sm-2 control-label">Текст номер @(i + 1)</label>
                    <div>
                        @{
                            var lyricsDto = Model != null ? Model.FirstOrDefault(x => x.id == i) : null;
                            var value = lyricsDto != null ? lyricsDto.value : null;
                        }
                        <textarea style="height: 350px; resize: none;" id="lyrics[@i]" name="lyrics[@i]" class="form-control" placeholder="Панчи, рифмы, поэзия, стихи, лирика..">@value</textarea>
                    </div>
                </div>
            }
            <input type="hidden" name="vk_id" id="vk_id" value="@ViewBag.vk_id" />
            <input type="hidden" name="token" id="token" value="@ViewBag.token" />
        </div>
        <div class="form-group">
            <button type="submit" style="border: solid 2px cyan; font-size: 1em;" id="button" class="btn btn-primary btn-lg btn-block login-button">Сохранить всё</button>
        </div>
    </form>
</div>

<div class="row">
</div>