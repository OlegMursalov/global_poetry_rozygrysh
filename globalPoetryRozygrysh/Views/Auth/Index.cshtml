@{
    ViewBag.Title = "Home Page";
}

    <div class="jumbotron" style="background: darkmagenta; border: solid 2px cyan;">
        <h1 style="color: cyan;">GLOBAL POETRY РОЗЫГРЫШ</h1>
        <p class="lead" style="color: cyan;">Форма регистрации-авторизации</p>
        <form class="" method="post" action="#">

            <div class="form-group">
                <label style="color: cyan;" for="name" class="cols-sm-2 control-label">ID VK <span style="color: red;">*</span></label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Чтоб вас найти в ВК" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label style="color: cyan;" for="email" class="cols-sm-2 control-label">Пароль <span style="color: red;">*</span></label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                        <input type="password" class="form-control" name="email" id="email" placeholder="Пароль" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label style="color: cyan;" for="username" class="cols-sm-2 control-label">Как вам перевести деньги?</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                        <textarea class="form-control" placeholder="Кратко опишите куда и как"></textarea>
                    </div>
                </div>
            </div>

            <div class="form-group ">
                <button type="submit" style="border: solid 2px cyan;" id="button" class="btn btn-primary btn-lg btn-block login-button">Зарегистрироваться или войти</button>
            </div>

        </form>
    </div>

<div class="row">
</div>