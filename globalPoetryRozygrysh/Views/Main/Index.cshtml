@model globalPoetryRozygrysh.Models.RapLineModel
<div class="jumbotron" style="background: darkmagenta; border: solid 2px cyan;">
    <form class="" method="post" action="">
        <div class="row" style="margin-bottom: 25px;">
            @{
                int i = 0;
                foreach (var varik in Model.GetAllRapLines())
                {
                    i++;
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="check-var-@i">
                        <label class="form-check-label" for="check-var-@i">
                            @varik.Value
                        </label>
                    </div>
                }
            }
        </div>
        <div class="form-group">
            <button type="button" style="border: solid 2px cyan; font-size: 1em;" id="button" class="btn btn-primary btn-lg btn-block login-button">Готово</button>
        </div>
    </form>
</div>